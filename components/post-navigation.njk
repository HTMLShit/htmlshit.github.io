{% macro postNavigation(prev, next) %}
  <nav>
    {% if prev %}
      <a href="{{ prev.url }}">
        <b>туда</b>
        <br/>
        <small>{{ prev.data.title }}</small>
      </a>
    {% endif %}
    {% if next %}
      <a href="{{ next.url }}">
        <b>сюда</b>
        <br/>
        <small>{{ next.data.title }}</small>
      </a>
    {% endif %}
  </nav>
{% endmacro %}
