<header>
  {% if config.navigation %}
    <nav>
      {% for item in config.navigation %}
        {% if not item.hidden %}
          {% set relExternal = '' %}
          {% set isCurrent = '' %}

          {% if item.external %}
            {% set relExternal = ' rel="external" target="_blank"' %}
          {% endif %}
          {% if page.url == item.url %}
            {% set isCurrent = ' aria-current="page"' %}
          {% endif %}
          <a href="{{ item.url }}"{{ relExternal | safe }}{{ isCurrent | safe }}>
            <b>{{ item.text }}</b>
          </a>
        {% endif %}
      {% endfor %}
    </nav>
  {% endif %}
  {% include "theme-switcher.njk" %}
</header>
